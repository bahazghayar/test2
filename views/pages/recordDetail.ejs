            <input type="number" name="totalconfirmed" value="<%= data.totalconfirmed %>">
            <input type="number" name="totaldeaths" value="<%= data.totaldeaths  %>">
            <input type="number" name="totalrecovered" value="<%= data.totalrecovered  %>">
            <input type="text" name="date" value="<%= data.date  %>">

            <input type="submit" value="Update">

        </form>

        <form action="/deleteRecordDetail/<%= data.id%>?_method=delete" method="POST">
            <input type="submit" value="DELETE">
        </form>

    </main>
